{
  "name": "@birchill/normal-jp",
  "version": "1.6.0",
  "description": "Various Japanese text conversion utilities",
  "author": "Brian Birtles",
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "prepublishOnly": "pinst --disable && tsup",
    "postinstall": "husky",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birchill/normal-jp.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bugs": {
    "url": "https://github.com/birchill/normal-jp/issues"
  },
  "files": [
    "dist/**"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "homepage": "https://github.com/birchill/normal-jp#readme",
  "devDependencies": {
    "@release-it/conventional-changelog": "10.0.1",
    "@types/node": "22",
    "husky": "9.1.7",
    "knip": "5.62.0",
    "lint-staged": "16.1.4",
    "pinst": "3.0.0",
    "prettier": "3.6.2",
    "release-it": "19.0.4",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "vitest-github-actions-reporter": "0.11.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
