{
  "name": "@birchill/normal-jp",
  "version": "1.1.2",
  "description": "Various Japanese text conversion utilities",
  "author": "Brian Birtles",
  "scripts": {
    "build": "tsc --outDir dist/esm && tsc -m commonjs --outDir dist/cjs",
    "test": "jest",
    "prepublish": "tsc",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birchill/normal-jp.git"
  },
  "bugs": {
    "url": "https://github.com/birchill/normal-jp/issues"
  },
  "files": [
    "dist/**"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "homepage": "https://github.com/birchill/normal-jp#readme",
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.1",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "src/.*.test.ts$",
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "esModuleInterop": true
        }
      }
    }
  }
}
